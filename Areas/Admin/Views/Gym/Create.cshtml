@model GymViewModel
@inject HelperService MService

<div class="container">

<h4>Salon Oluştur</h4>
<hr />

<div class="container">
    <form asp-area="Admin" asp-controller="Gym" asp-action="Create" method="POST">
        <div class="form-group">
            <label asp-for="OwnerId">Salon Sahibi</label>
            <select asp-for="OwnerId" class="form-control">
                @foreach (var item in MService.ListGymOwner())
                {
                    <option value="@item.Id">@item.FullName()</option>
                }
            </select>
            <span asp-validation-for="OwnerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title">Salon Adı</label>
            <input asp-for="Title" type="text" class="form-control"  aria-describedby="titleHelp" placeholder="Salon adı girin">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>      
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
</div>