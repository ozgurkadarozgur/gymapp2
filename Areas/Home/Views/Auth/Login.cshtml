@model UserViewModel

<section class="convert-area">
    <div class="container">
        <div class="convert-wrap">
            <div class="row d-flex justify-content-center">
                <div class="menu-content pb-10 col-lg-8">
                    <div class="title text-center">
                        <br />
                        <br />
                        <h1 class="text-white mb-10">Üye Girişi Yapın</h1>
                        <!-- <p class="text-white">Spor Herkes için gereklidir.</p> -->
                    </div>
                </div>
            </div>
            <form asp-area="Home" asp-controller="Auth" asp-action="Login" method="POST">
            <div class="row justify-content-center align-items-start">
                <div class="col-lg-3 col-md-6 cols-img">
                    <input type="text" asp-for="Email" placeholder="Email" class="form-control mb-20">
                </div>
               
            </div>	
                <div class="row justify-content-center align-items-start">
                    <span asp-validation-for="Email" class="text-white"></span>
                </div>
            <div class="row justify-content-center align-items-start">
                <div class="col-lg-3 col-md-6 cols">
                    <input type="text" asp-for="Password" placeholder="Şifre" class="form-control mb-20">
                </div>
            </div>	
            <div class="row justify-content-center align-items-start">
                <span asp-validation-for="Password" class="text-white"></span>
            </div>
            <div class="row justify-content-center align-items-start">
               <div class="col-lg-3 col-md-6 cols">	
                    <button type="submit" class="primary-btn header-btn text-uppercase">Giriş Yap</button>
                </div>
            </div>
            </form>	
            <br />	
            <div class="row justify-content-center align-items-start">
               <div class="col-lg-3 col-md-6 cols">	
                    <a asp-area="Home" asp-controller="Auth" asp-action="SignUp" class="primary-btn header-btn text-uppercase">Kayıt Ol</a>
                </div>
            </div>				
        </div>
    </div>	
</section>
